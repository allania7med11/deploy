{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Project",
            "type": "shell",
            "command": "export $(cat .env | xargs) && ansible-playbook --inventory ansible/inventory/vm-setup-playbook/hosts ansible/${config:proj}.yml --extra-vars '${config:vars}'",
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
        }
    ]
}